{
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s clean:dist build:pkgs build:docs && echo 'Build complete'",
    "build:docs": "cp packages/image-zoom/dist/iife/image-zoom.* docs",
    "build:pkgs": "lerna exec -- rollup -c rollup.config.js",
    "ci": "run-p lint build test",
    "clean:dist": "rm -rf packages/*/dist/",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "postinstall": "lerna bootstrap",
    "prepublishOnly": "run-p lint test && npm run build",
    "start": "",
    "test": "jest",
    "watch": "chokidar 'packages/*/source/**/*' -c 'npm run build'"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "12.0.0",
    "@rollup/plugin-node-resolve": "8.0.0",
    "@testing-library/jest-dom": "5.9.0",
    "@testing-library/react": "10.0.4",
    "@types/jest": "25.2.3",
    "@types/node": "14.0.6",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "all-contributors-cli": "6.15.0",
    "axe-core": "3.5.4",
    "chokidar-cli": "2.1.0",
    "coveralls": "3.1.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.4",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lerna": "3.22.0",
    "lint-staged": "10.2.7",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "rollup": "2.12.0",
    "rollup-plugin-terser": "6.1.0",
    "rollup-plugin-typescript2": "0.27.1",
    "terser": "4.7.0",
    "ts-jest": "26.1.0",
    "ts-loader": "7.0.5",
    "typescript": "3.9.3"
  }
}
