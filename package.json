{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:pkgs build:docs && echo 'Build complete'",
    "build:ci": "yarn workspace @rpearce/image-zoom run build:ci && yarn workspace react-medium-image-zoom run build:ci",
    "build:docs": "cp packages/image-zoom/dist/iife/image-zoom.* docs",
    "build:pkgs": "yarn workspace @rpearce/image-zoom run build && yarn workspace react-medium-image-zoom run build",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "serve:docs": "serve docs",
    "start": "yarn run build && run-p watch serve:docs",
    "test": "yarn workspaces foreach -p run test",
    "watch": "chokidar 'packages/*/source/**/*' -c 'yarn run build'"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.10.0",
    "@types/jest": "26.0.0",
    "@types/node": "14.0.13",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "all-contributors-cli": "6.16.0",
    "chokidar-cli": "2.1.0",
    "coveralls": "3.1.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.4",
    "jest": "26.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "serve": "11.3.2",
    "ts-jest": "26.1.0",
    "ts-loader": "7.0.5",
    "typescript": "3.9.5"
  }
}
